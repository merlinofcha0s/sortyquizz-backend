<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Card.
    -->
    <changeSet id="20200327154000-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="card_id"
                                 baseTableName="card_profile"
                                 constraintName="fk_card_profile_card_id"
                                 referencedColumnNames="id"
                                 referencedTableName="card"/>

        <addForeignKeyConstraint baseColumnNames="profile_id"
                                 baseTableName="card_profile"
                                 constraintName="fk_card_profile_profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"/>
        
        <addForeignKeyConstraint baseColumnNames="pack_id"
                                 baseTableName="card"
                                 constraintName="fk_card_pack_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pack"/>

    </changeSet>
</databaseChangeLog>
